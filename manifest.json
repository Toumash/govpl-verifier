{
  "manifest_version": 3,
  "name": "Weryfikacja GOV.PL",
  "description": "Weryfikacja autentyczności stron gov.pl za pomocą aplikacji mObywatel",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://www.dns.pl/*",
    "https://hole.cert.pl/*",
    "https://cert.pl/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Weryfikacja GOV.PL",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
